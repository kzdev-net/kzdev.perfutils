{
    "metadata": [
        {
            "src": [
                {
                    "src": "../../artifacts/bin/KZDev.PerfUtils/release_net9.0",
                    "dest": "api",
                    "cwd": "src",
                    "properties": {
                        "TargetFramework": "net9"
                    },
                    "files": [
                        "**/*.dll"
                    ]
                }
            ],
            "dest": "api",
            "filter": "filterConfig.yml",
            "outputFormat": "mref",
            "memberLayout": "separatePages",
            "enumSortOrder": "declaringOrder",
            "allowCompilationErrors": false
        }
    ],
    "build": {
        "markdownEngineProperties": {
            "markdigExtensions": [ "footnotes", "attributes" ]
        },
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**",
                    "articles/*.html"
                ]
            }
        ],
        "output": "_site",
        "sitemap": {
            "baseUrl": "https://kzdev-net.github.io/kzdev.perfutils/",
            "priority": 0.1,
            "changefreq": "monthly"
        },
        "template": [
            "default",
            "modern",
            "templates/material",
            "templates/custom"
        ],
        "postProcessors": [ "ExtractSearchIndex" ],
        "xref": [
            "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
        ],
        "globalMetadata": {
            "_appName": "KZDev PerfUtils",
            "_appTitle": "KZDev.PerfUtils",
            "_appFaviconPath": "images/favicon.ico",
            "_appFooter": "Copyright Â© 2024-2025 Kevin Zehrer",
            "_appLogoPath": "images/kzdevlogo.svg",
            "_disableContribution": true,
            "_enableSearch": true,
            "pdf": false
        }
    }
}