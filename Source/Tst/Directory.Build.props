<Project>
    <!-- 
    Define Source-Level properties
   -->
    <PropertyGroup Label="SourceGlobals">
        <Configurations>Debug;Release</Configurations>
        <TargetFrameworks>net8.0;net6.0</TargetFrameworks>
        <IsPackable>false</IsPackable>
        <RootNamespace>KZDev.PerfUtils.Tests</RootNamespace>
    </PropertyGroup>
    <!-- 
    Import the next higher level Directory.Build.props file. 
   -->
    <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)..\'))" />
    <!-- 
    Define test project package version properties
   -->
    <ItemGroup Label="TestPackageVersions">
        <PackageVersion Include="Bogus" Version="35.6.1" />
        <PackageVersion Include="coverlet.collector" Version="6.0.4" />
        <PackageVersion Include="FluentAssertions" Version="8.0.1" />
        <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.12.0" />
        <PackageVersion Include="Moq" Version="4.20.72" />
        <PackageVersion Include="xunit" Version="2.9.3" />
        <PackageVersion Include="xunit.runner.visualstudio" Version="3.0.1" />
        <PackageVersion Include="XunitXml.TestLogger" Version="5.0.0" />
    </ItemGroup>
    <ItemGroup Label="SourcePackageVersions" Condition="'$(TargetFramework)' == 'net6.0'">
	    <PackageVersion Include="System.Collections.Immutable" Version="8.0.0" />
    </ItemGroup>
</Project>
